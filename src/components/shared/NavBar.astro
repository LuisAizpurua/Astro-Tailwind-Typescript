---
const links = [
  { href: "/", text: "Listado" },
  { href: "/pokemons/1", text: "Paginado" },
  { href: "/favorites", text: "Favoritos" },
];
const currentPage = Astro.url.pathname;
---

<nav class="bg-black text-center">
  <div class="py-4">
    {
      links.map(({ href, text }) => {
       
         return( <a href={href} class="text-white mx-1.5 sm:mx-6">
            {text}
          </a>
          )
    })
  }
  </div>
</nav>